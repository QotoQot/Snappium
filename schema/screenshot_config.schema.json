{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Screenshot Automation Configuration",
  "description": "Unified configuration schema for Snappium screenshot automation",
  "type": "object",
  "required": ["Devices", "Languages", "LocaleMapping", "Screenshots"],
  "properties": {
    "Devices": {
      "type": "object",
      "required": ["Ios", "Android"],
      "properties": {
        "Ios": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["Name", "Folder", "PlatformVersion"],
            "properties": {
              "Name": {"type": "string", "minLength": 1},
              "Udid": {"type": ["string", "null"]},
              "Folder": {"type": "string", "pattern": "^[a-zA-Z0-9_]+$"},
              "PlatformVersion": {"type": "string", "pattern": "^[0-9]+\\.[0-9]+$"}
            }
          }
        },
        "Android": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["Name", "Avd", "Folder", "PlatformVersion"],
            "properties": {
              "Name": {"type": "string", "minLength": 1},
              "Avd": {"type": "string", "minLength": 1},
              "Folder": {"type": "string", "pattern": "^[a-zA-Z0-9_]+$"},
              "PlatformVersion": {"type": "string", "pattern": "^[0-9]+$"}
            }
          }
        }
      }
    },
    "Languages": {
      "type": "array",
      "items": {"type": "string", "pattern": "^[a-z]{2}-[A-Z]{2}$"},
      "minItems": 1
    },
    "LocaleMapping": {
      "type": "object",
      "patternProperties": {
        "^[a-z]{2}-[A-Z]{2}$": {
          "type": "object",
          "required": ["Ios", "Android"],
          "properties": {
            "Ios": {"type": "string", "pattern": "^[a-z]{2}_[A-Z]{2}$"},
            "Android": {"type": "string", "pattern": "^[a-z]{2}_[A-Z]{2}$"}
          }
        }
      }
    },
    "Artifacts": {
      "type": "object",
      "required": ["Ios", "Android"],
      "properties": {
        "Ios": {
          "type": "object",
          "required": ["ArtifactGlob", "Package"],
          "properties": {
            "ArtifactGlob": {"type": "string"},
            "Package": {"type": "string"}
          }
        },
        "Android": {
          "type": "object",
          "required": ["ArtifactGlob", "Package"],
          "properties": {
            "ArtifactGlob": {"type": "string"},
            "Package": {"type": "string"}
          }
        }
      }
    },
    "OutputDirectory": {
      "type": "string",
      "default": "Screenshots"
    },
    "Screenshots": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["Name", "Actions"],
        "properties": {
          "Name": {"type": "string", "minLength": 1},
          "Orientation": {"type": "string", "enum": ["portrait", "landscape"]},
          "Actions": {
            "type": "array",
            "items": {"$ref": "#/definitions/action"}
          },
          "Assert": {
            "type": "object",
            "properties": {
              "Ios": {"$ref": "#/definitions/selector"},
              "Android": {"$ref": "#/definitions/selector"}
            }
          }
        }
      }
    },
    "Timeouts": {
      "type": "object",
      "properties": {
        "DefaultWaitMs": {"type": "integer", "minimum": 1000, "maximum": 60000},
        "ImplicitWaitMs": {"type": "integer", "minimum": 0, "maximum": 10000},
        "PageLoadTimeoutMs": {"type": "integer", "minimum": 10000, "maximum": 120000}
      }
    },
    "Ports": {
      "type": "object",
      "properties": {
        "BasePort": {"type": "integer", "minimum": 1024, "maximum": 65535},
        "PortOffset": {"type": "integer", "minimum": 1, "maximum": 100}
      }
    },
    "FailureArtifacts": {
      "type": "object",
      "properties": {
        "SavePageSource": {"type": "boolean"},
        "SaveScreenshot": {"type": "boolean"},
        "SaveAppiumLogs": {"type": "boolean"},
        "SaveDeviceLogs": {"type": "boolean"},
        "ArtifactsDir": {"type": "string"}
      }
    },
    "StatusBar": {
      "type": "object",
      "properties": {
        "Ios": {
          "type": "object",
          "properties": {
            "Time": {"type": "string"},
            "WifiBars": {"type": "integer", "minimum": 0, "maximum": 4},
            "CellularBars": {"type": "integer", "minimum": 0, "maximum": 4},
            "BatteryState": {"type": "string", "enum": ["charging", "charged", "unplugged"]}
          }
        },
        "Android": {
          "type": "object",
          "properties": {
            "DemoMode": {"type": "boolean"},
            "Clock": {"type": "string"},
            "Battery": {"type": "integer", "minimum": 0, "maximum": 100},
            "Wifi": {"type": "string"},
            "Notifications": {"type": "string"}
          }
        }
      }
    },
    "Validation": {
      "type": "object",
      "properties": {
        "EnforceImageSize": {"type": "boolean"},
        "ExpectedSizes": {
          "type": "object",
          "properties": {
            "Ios": {"$ref": "#/definitions/device_sizes"},
            "Android": {"$ref": "#/definitions/device_sizes"}
          }
        }
      }
    },
    "Capabilities": {
      "type": "object",
      "properties": {
        "Ios": {"type": "object"},
        "Android": {"type": "object"}
      }
    },
    "Dismissors": {
      "type": "object",
      "properties": {
        "Ios": {
          "type": "array",
          "items": {"$ref": "#/definitions/selector"}
        },
        "Android": {
          "type": "array",
          "items": {"$ref": "#/definitions/selector"}
        }
      }
    }
  },
  "definitions": {
    "action": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "Tap": {"$ref": "#/definitions/selector"}
          },
          "required": ["Tap"]
        },
        {
          "properties": {
            "Wait": {
              "type": "object",
              "required": ["Seconds"],
              "properties": {
                "Seconds": {"type": "number", "minimum": 0}
              }
            }
          },
          "required": ["Wait"]
        },
        {
          "properties": {
            "WaitFor": {
              "type": "object",
              "required": ["Selector", "TimeoutMs"],
              "properties": {
                "Selector": {"$ref": "#/definitions/selector"},
                "TimeoutMs": {"type": "integer", "minimum": 100, "maximum": 30000}
              }
            }
          },
          "required": ["WaitFor"]
        },
        {
          "properties": {
            "Capture": {
              "type": "object",
              "required": ["Name"],
              "properties": {
                "Name": {"type": "string", "minLength": 1}
              }
            }
          },
          "required": ["Capture"]
        }
      ]
    },
    "selector": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "accessibility_id": {"type": "string", "minLength": 1}
          },
          "required": ["accessibility_id"]
        },
        {
          "properties": {
            "ios_class_chain": {"type": "string", "minLength": 1}
          },
          "required": ["ios_class_chain"]
        },
        {
          "properties": {
            "android_uiautomator": {"type": "string", "minLength": 1}
          },
          "required": ["android_uiautomator"]
        },
        {
          "properties": {
            "xpath": {"type": "string", "minLength": 1}
          },
          "required": ["xpath"]
        },
        {
          "properties": {
            "id": {"type": "string", "minLength": 1}
          },
          "required": ["id"]
        }
      ]
    },
    "device_sizes": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "Portrait": {
              "type": "array",
              "items": {"type": "integer", "minimum": 1},
              "minItems": 2,
              "maxItems": 2
            },
            "Landscape": {
              "type": "array",
              "items": {"type": "integer", "minimum": 1},
              "minItems": 2,
              "maxItems": 2
            }
          }
        }
      }
    }
  }
}